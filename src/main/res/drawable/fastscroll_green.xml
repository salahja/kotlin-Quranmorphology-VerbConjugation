<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" android:tint="?colorControlActivated">
                    <solid android:color="@color/colorPrimaryGreen" />
                    <size android:width="8.0dip" android:height="48.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle" android:tint="?colorControlNormal">
                    <solid android:color="@android:color/darker_gray" />
                    <size android:width="8.0dip" android:height="48.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>