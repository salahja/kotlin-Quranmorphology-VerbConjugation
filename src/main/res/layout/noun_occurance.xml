<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:paddingStart="6.0dip"
    android:paddingEnd="6.0dip"

    >


    <FrameLayout
        android:id="@+id/sheet"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:dividerHeight="0.0px"
        app:cardCornerRadius="12dp"

        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_anchorGravity="bottom"
        app:rippleColor="@color/colorAccent"


        app:strokeColor="@color/color_primary_variant"
        app:strokeWidth="1dp">

        <RelativeLayout
            android:id="@id/containertop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity=""


            android:orientation="horizontal">

            <TextView
                android:id="@id/nounname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"


                android:textSize="16.0sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"


            android:orientation="horizontal">


            <TextView
                android:id="@id/chapterverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="5dp"
                android:layout_weight="1"

                android:autoSizeTextType="uniform"

                android:textSize="16.0sp" />

            <TextView
                android:id="@id/arabicword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="15dp"
                android:layout_toEndOf="@id/chapterverse"

                android:layout_weight="2"
                android:autoSizeTextType="uniform"


                android:textSize="16.0sp" />

            <TextView
                android:id="@id/meaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chapterverse"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"


                android:textSize="16.0sp" />

            <TextView
                android:id="@id/wazan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="15dp"
                android:layout_toEndOf="@id/arabicword"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"


                android:textSize="16.0sp" />

            <TextView
                android:id="@id/gendernumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="15dp"
                android:layout_toEndOf="@id/wazan"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"


                android:textSize="16.0sp" />

            <TextView

                android:id="@id/cases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="15dp"
                android:layout_toEndOf="@id/gendernumber"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"


                android:textSize="16.0sp" />


            <TextView

                android:id="@id/participles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15.0dip"
                android:layout_toEndOf="@id/cases"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"


                android:textSize="16.0sp" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@id/participles"
                android:src="@drawable/ic_more" />

            <TextView
                android:id="@id/ayah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chapterverse"
                android:layout_gravity="top"
                android:layout_marginTop="50.0dip"
                android:layout_weight="1"
                android:text="AYAH"


                android:textSize="16.0sp" />

            <EditText
                android:id="@id/translation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ayah"
                android:layout_gravity="top"
                android:layout_marginTop="20.0dip"
                android:layout_weight="1"
                android:text="translation"
                android:textIsSelectable="true"


                android:textSize="16.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/translation"
                android:layout_alignStart="@+id/stringlength"
                android:text="pasete" />

            <EditText
                android:id="@id/stringlength"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/translation"
                android:layout_gravity="top"
                android:layout_marginTop="20.0dip"
                android:layout_weight="1"
                android:text="a"
                android:textIsSelectable="true"


                android:textSize="16.0sp" />

            <TextView
                android:id="@id/lengths"
                android:layout_width="200dp"

                android:layout_height="30dp"
                android:layout_below="@id/stringlength"


                android:layout_gravity="top"
                android:layout_marginTop="20.0dip"
                android:layout_weight="1"
                android:textIsSelectable="true"


                android:textSize="16.0sp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>