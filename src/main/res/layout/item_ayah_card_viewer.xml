<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/space_2"
    android:paddingTop="@dimen/space_2"
    android:paddingRight="@dimen/space_2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBg"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tvPageNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimaryLight"
                android:gravity="center"
                android:padding="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="?attr/colorPrimaryDark"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tvArabic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:focusable="false"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:textSize="20sp"
                android:visibility="gone" />

            <com.example.utility.FlowLayout
                android:id="@+id/flowlWordByWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTranslation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
