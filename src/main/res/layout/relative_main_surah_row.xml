<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:barrierMargin="2.0dip"
    app:cardElevation="@dimen/space_1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:maxHeight="66.0dip"
        android:minHeight="66.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tvNumber"
            android:layout_width="40.0dip"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/space_3"

            android:text="number"
             />

        <TextView
            android:id="@id/tvArabic"
            android:layout_width="wrap_content"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:padding="@dimen/space_1"

            android:text="ALFATIHA"
            />

        <TextView
            android:id="@id/tvenglish"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surahicon"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_2"
            android:padding="@dimen/space_1"

            android:text="english meaning"
             />

        <ImageView
            android:id="@id/makkimadaniicon"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"

            android:layout_below="@+id/tvArabic"


            android:layout_marginStart="@dimen/space_2"
            android:layout_marginTop="@dimen/space_2"
            android:layout_marginEnd="@dimen/space_2"
            android:layout_marginBottom="@dimen/space_2" />

        <ImageView
            android:id="@id/surahicon"
            android:layout_width="90.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/space_2"
            android:gravity="start"
            android:paddingRight="@dimen/space_2"
            app:tint="?android:textColor" />

        <View
            android:id="@+id/view_toolbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/tvenglish"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/toolbar_shadow" />
    </RelativeLayout>
</FrameLayout>