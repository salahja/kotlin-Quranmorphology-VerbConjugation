<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_gravity="center_horizontal"
    android:background="#CC000000"
    android:layoutDirection="ltr"
    android:orientation="horizontal">


    <ImageButton
        android:id="@id/exo_prev"


        style="@style/ExoMediaButton.Previous"
        app:layout_constraintEnd_toStartOf="@+id/exo_play"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exo_bottom_bar" />

    <ImageButton
        android:id="@id/exo_rew"

        style="@style/ExoMediaButton.Rewind"
        app:layout_constraintEnd_toStartOf="@+id/exo_repeat_toggle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@id/exo_repeat_toggle"
        style="@style/ExoMediaButton"
        android:visibility="gone"

        app:layout_constraintEnd_toStartOf="@+id/exo_pause"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exo_rew"
        tools:layout_editor_absoluteY="26dp" />

    <ImageButton
        android:id="@id/exo_play"
        style="@style/ExoMediaButton.Play"

        app:layout_constraintEnd_toStartOf="@+id/exo_next"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exo_prev" />


    <ImageButton
        android:id="@id/exo_pause"
        style="@style/ExoMediaButton.Pause"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/exo_bottom_bar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exo_repeat_toggle" />

    <ImageButton
        android:id="@id/exo_ffwd"
        style="@style/ExoMediaButton.FastForward"

        app:layout_constraintEnd_toStartOf="@+id/exo_close"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exo_next" />

    <ImageButton
        android:id="@id/exo_next"
        style="@style/ExoMediaButton.Next"


        app:layout_constraintEnd_toStartOf="@+id/exo_ffwd"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exo_play" />

    <ImageButton
        android:id="@+id/exo_close"
        style="@style/ExoMediaButton"


        android:backgroundTint="@color/transparent"

        android:src="@drawable/stop_24"
        app:layout_constraintEnd_toStartOf="@+id/exo_settings"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exo_ffwd"
        app:tint="@color/white">

    </ImageButton>

    <ImageButton
        android:id="@+id/exo_bottom_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/repeatof"
        android:src="@drawable/ic_baseline_open_in_browser_24"
        android:visibility="visible"

        app:layout_constraintEnd_toStartOf="@+id/exo_prev"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exo_pause"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/exo_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/next"
        android:src="@drawable/ic_settings"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exo_close"
        app:tint="@color/white"
        tools:layout_editor_absoluteY="1dp">

    </ImageButton>


